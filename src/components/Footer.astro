---
import { config } from "@/lib/config";
import { Github, Mail } from "lucide-astro";
---

<footer class="fixed bottom-0 left-0 right-0 z-50 flex px-4 items-center h-12 text-white backdrop-blur-md">
  <div class="flex gap-5 text-sm justify-between w-full items-center">
    <div>
      &copy; {new Date().getFullYear()}
      <span class="font-bold">{config.title}</span>
    </div>

    <div class="flex gap-3">
      <a href={`mailto:${config.email}`} class="flex items-center" target="_blank" rel="noopener noreferrer">
        <span><Mail /></span>
      </a>
      <a href={config.github_url} class="flex items-center" target="_blank" rel="noopener noreferrer">
        <Github class="w-5 h-5 mr-1" />
        <span>Source</span>
      </a>
    </div>
  </div>
</footer>
